<h3>
  <%= @task.description %>
</h3>
<%= button_to 'Delete', task_path(@task), method: :delete, class: 'btn btn-danger' %>
<%= button_to 'Edit', edit_task_path(@task), method: :get, class: 'btn btn-success' %>
<%= button_to 'Finish', task_path(@task, task: {status: 'finished'}), method: :put, class: 'btn btn-success' %>
<%= button_to 'Cancel', task_path(@task, task: {status: 'cancelled'}), method: :put, class: 'btn btn-success' %>