<h1>Pending Tasks</h1>

<%= button_to "New task", new_task_path, method: :get, class: 'btn btn-primary' %>

<table class='table table-striped table-hover table-condensed'>
  <thead>
    <th>Id</th>
    <th>Description</th>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <% if task.pending? %>
        <tr class='warning'>
          <td> <%= task.id %> </td>
          <td> <%= link_to task.description, task_path(task) %> </td>
          <td> <%= task.status %> </td>
          <td> <%= button_to 'Delete', task_path(task), method: :delete, class: 'btn btn-danger' %> </td>
          <td> <%= button_to 'Edit', edit_task_path(task), method: :get, class: 'btn btn-success' %> </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
<%= render 'layouts/sign_out' %>